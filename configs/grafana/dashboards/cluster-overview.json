{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "Node Status",
      "type": "stat",
      "gridPos": { "h": 4, "w": 24, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "count(up{job=\"node-exporter\"} == 1)",
          "legendFormat": "Nodes Up"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 4 },
              { "color": "green", "value": 6 }
            ]
          },
          "unit": "none"
        }
      }
    },
    {
      "title": "CPU Usage by Node",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "targets": [
        {
          "expr": "100 - (avg by(node) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "{{ node }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "max": 100,
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 60 },
              { "color": "red", "value": 80 }
            ]
          }
        }
      }
    },
    {
      "title": "Memory Usage by Node",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "targets": [
        {
          "expr": "(1 - node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes) * 100",
          "legendFormat": "{{ node }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "max": 100,
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 85 }
            ]
          }
        }
      }
    },
    {
      "title": "Disk Usage by Node",
      "type": "bargauge",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "targets": [
        {
          "expr": "(1 - node_filesystem_avail_bytes{mountpoint=\"/\"} / node_filesystem_size_bytes{mountpoint=\"/\"}) * 100",
          "legendFormat": "{{ node }} /"
        },
        {
          "expr": "(1 - node_filesystem_avail_bytes{mountpoint=\"/mnt/depin-storage\"} / node_filesystem_size_bytes{mountpoint=\"/mnt/depin-storage\"}) * 100",
          "legendFormat": "{{ node }} /mnt/depin-storage"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "max": 100,
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 85 }
            ]
          }
        }
      }
    },
    {
      "title": "Network Traffic (Receive)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total{device!=\"lo\"}[5m])",
          "legendFormat": "{{ node }} {{ device }} RX"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "Bps" }
      }
    },
    {
      "title": "Temperature",
      "type": "gauge",
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 20 },
      "targets": [
        {
          "expr": "node_hwmon_temp_celsius",
          "legendFormat": "{{ node }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "celsius",
          "min": 20,
          "max": 90,
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 65 },
              { "color": "red", "value": 75 }
            ]
          }
        }
      }
    },
    {
      "title": "System Load (5m avg)",
      "type": "timeseries",
      "gridPos": { "h": 6, "w": 12, "x": 12, "y": 20 },
      "targets": [
        {
          "expr": "node_load5",
          "legendFormat": "{{ node }}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "none" }
      }
    },
    {
      "title": "24h Uptime Ratio",
      "type": "stat",
      "gridPos": { "h": 4, "w": 24, "x": 0, "y": 26 },
      "targets": [
        {
          "expr": "avg_over_time(up{job=\"node-exporter\"}[24h]) * 100",
          "legendFormat": "{{ node }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2,
          "thresholds": {
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 95 },
              { "color": "green", "value": 99 }
            ]
          }
        }
      }
    }
  ],
  "schemaVersion": 39,
  "tags": ["depin", "cluster"],
  "templating": { "list": [] },
  "time": { "from": "now-6h", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "DePIN Cluster Overview",
  "uid": "depin-cluster-overview"
}
